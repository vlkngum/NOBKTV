{
  "manifest_version": 3,
  "name": "NobkTV",
  "version": "1.0",
  "description": "Sohbet mesajlarında anahtar kelimeleri otomatik emojiye çeviren ve panelden emoji seçmeye izin veren eklenti.",
  "content_scripts": [
    {
      "matches": ["https://hyperbeam.com/*"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["emoji.json", "emoji/*"],
      "matches": ["https://hyperbeam.com/*"]
    }
  ]
}
